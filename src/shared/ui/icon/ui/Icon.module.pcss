.icon {
  --iconSize: 3rem;
  --iconColor: var(--themeInvertedPrimaryColor);

  display: flex;
  justify-content: center;
  align-items: center;
  width: var(--iconSize);
  height: var(--iconSize);
  color: var(--iconColor);

  &.sizeM {
    --iconSize: 4rem;
  }

  &.sizeL {
    --iconSize: 5rem;
  }
}